<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/end_screen.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/end_screen.js" /> 
  </scripts>
	<Panel class="EndScreenRoot" hittest="false">	
		<Panel id="EndScreenBlackOut" />
		<Panel id="EndScreenContainer">
			<Panel id="Header">
				<Button id="Overview" text="Overview" onactivate="SwitchCategory(1)" class="Active CategoryButton">
					<Label text="Overview" />
				</Button>
				<Button id="Units" onactivate="SwitchCategory(2)" class="Idle CategoryButton" >
					<Label text="Units" />
				</Button>
				<Button id="Heroes" onactivate="SwitchCategory(3)" class="Idle CategoryButton" >
					<Label text="Heroes" />
				</Button>
				<Button id="Resources" onactivate="SwitchCategory(4)" class="Idle CategoryButton" >
					<Label text="Resources" />
				</Button>
			</Panel>
			<Panel id="Body">
				<Panel id="BodyHeader" >
				
					<Panel id="GlobalColumnHeaders" >
						<Button id="Teams" onactivate="SortByTeam()" >
							<Label text="Teams" />
						</Button>
						<!--<Button id="AllyColors" onactivate="ToggleAllyColors()" class="ColumnButton" >
							<Label text="AllyColors" />
						</Button>-->
					</Panel>
					
					<Panel id="OverviewHeaders" class="ColumnHeader visible">					
						<Button id="UnitScore" onactivate="SortPlayersByColumn(1, 1)" class="ColumnButton" >
							<Label text="Unit Score" />
						</Button>
						<Button id="HeroScore" onactivate="SortPlayersByColumn(1, 2)" class="ColumnButton" >
							<Label text="Hero Score" />
						</Button>
						<Button id="ResourceScore" onactivate="SortPlayersByColumn(1, 3)" class="ColumnButton" >
							<Label text="Resource Score" />
						</Button>
						<Button id="TotalScore" onactivate="SortPlayersByColumn(1, 4)" class="ColumnButton" >
							<Label text="Total Score" />
						</Button>
					</Panel>

					<Panel id="UnitsHeaders" class="ColumnHeader collapse" >
						<Button id="UnitsProduced" onactivate="SortPlayersByColumn(2, 1)" class="ColumnButton" >
							<Label text="Units Produced" />
						</Button>
						<Button id="UnitsKilled" onactivate="SortPlayersByColumn(2, 2)" class="ColumnButton" >
							<Label text="Units Killed" />
						</Button>
						<Button id="BuildingsProduced" onactivate="SortPlayersByColumn(2, 3)" class="ColumnButton" >
							<Label text="Buildings Produced" />
						</Button>
						<Button id="BuildingsRazed" onactivate="SortPlayersByColumn(2, 4)" class="ColumnButton" >
							<Label text="Buildings Razed" />
						</Button>
						<Button id="LargestArmy" onactivate="SortPlayersByColumn(2, 5)" class="ColumnButton" >
							<Label text="Largest Army" />
						</Button>
					</Panel>

					<Panel id="HeroesHeaders" class="ColumnHeader collapse">
						<Button id="HeroesUsed" onactivate="SortPlayersByColumn(3, 1)" class="ColumnButton" >
							<Label text="Heroes Used" />
						</Button>
						<Button id="HeroesKilled" onactivate="SortPlayersByColumn(3, 2)" class="ColumnButton" >
							<Label text="Heroes Killed" />
						</Button>
						<Button id="ItemsObtained" onactivate="SortPlayersByColumn(3, 3)" class="ColumnButton" >
							<Label text="Items Obtained" />
						</Button>
						<Button id="MercenariesHired" onactivate="SortPlayersByColumn(3, 4)" class="ColumnButton" >
							<Label text="Mercenaries Hired" />
						</Button>
						<Button id="ExperienceGained" onactivate="SortPlayersByColumn(3, 5)" class="ColumnButton" >
							<Label text="Experience Gained" />
						</Button>
					</Panel>

					<Panel id="ResourcesHeaders" class="ColumnHeader collapse">
						<Button id="GoldMined" onactivate="SortPlayersByColumn(4, 1)" class="ColumnButton" >
							<Label text="Gold Mined" />
						</Button>
						<Button id="LumberHarvested" onactivate="SortPlayersByColumn(4, 2)" class="ColumnButton" >
							<Label text="Lumber Harvested" />
						</Button>
						<Button id="ResourceTraded" onactivate="SortPlayersByColumn(4, 3)" class="ColumnButton" >
							<Label text="Resource Traded" />
						</Button>
						<Button id="TechPercentage" onactivate="SortPlayersByColumn(4, 4)" class="ColumnButton" >
							<Label text="Tech Percentage" />
						</Button>
						<Button id="GoldLostToUpkeep" onactivate="SortPlayersByColumn(4, 5)" class="ColumnButton" >
							<Label text="Gold Lost To Upkeep" />
						</Button>
					</Panel>
				</Panel>
				
				<Panel id="PlayerContainer" />
				
			</Panel>
			<Panel id="Footer" >
				<Label id="ElapsedTime" text="00:00" />
				<Button id="DisconnectButton" onactivate="FinishGame()" >
					<Label text="Disconnect" />
				</Button>	
			</Panel>
		</Panel>
	</Panel>
</root>